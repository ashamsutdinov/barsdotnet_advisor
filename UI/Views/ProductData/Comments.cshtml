@using System.Collections.Generic;
@using UI.Models;
@model IEnumerable<CommentModel>
    @{
        ViewBag.Title = "Отзывы";
    }
    <br>
    <table>
        <tr>

            <td width="30%"></td>
            <td width="100%"> 
                
                <table >
                <h2><font color="green"><center> Отзывы на товар или продукт:<br><br></center></font></h2>
                @*<br><br>
    <hr width="100%" align="left">*@
                @if (Model.Count() == 0)
                {
                    <p>К сожалению, еще никто не оставил отзывов на это предложение</p>
                }
                else
                {
                    foreach (CommentModel b in Model)
                    {

                        <tr bgcolor="yellow">

                            <td align="left" width="30%">

                                <a href="/UserData/Index/@b.Id">@b.AuthorLogin</a>

                            </td>
                            <td align="left" width="30%">
                                Оценка: @b.Rating
                            </td>
                            <td align="right" width="30%"><font color="green">@b.DateOfCreate</font></td>

                        </tr>
                    <tr>
                    <td>@b.Text</td>
                </tr>
                    }
                }
                </table>
                </td>
                <td width="20%"></td>

                
                </tr>
            </table>
