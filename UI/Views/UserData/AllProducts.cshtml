@using System.Collections.Generic;
@using UI.Models;

@model IEnumerable<ProductModel>
    @{
        ViewBag.Title = "Все предложения";
    }
    <h2>Все предложения</h2>
    @if (Model.Count() == 0) 
    {
        <p>Не добавлено еще ни одного предложения</p>
    }
    else 
    {     
        foreach (ProductModel b in Model)
            {
            <tr>
                <td><p><a href="/ProductData/Index/@b.Id">@b.Name</a></p></td>
                <td><p>@b.Category</p></td>
                <td><p>@b.Rating</p></td>
                <td><p>от @b.MinValue рублей</p></td>
                <td><p></p></td>
            </tr>
            }
    }           

