@model UI.Models.LoginModel

@{
    ViewBag.Title = "Login";
}

@{/*тут нужно написать формочку для ввода данных при заходе на сайт*/}
@using (Html.BeginForm("Login", "User", FormMethod.Post))
{
    <br>@Html.ValidationSummary(true)
    <br>
    <table border ="0" width="100%" align="center">
        <tr>
            <td align="center" width="50%"><b>Введите логин: </b></td>
        </tr>
        <tr>
            <td align="center" width="50%">
                @Html.TextBox("Login")
            </td>
            
        </tr>
        <tr>
            <td align="center" width="50%"><b>Введите пароль: </b></td>
        </tr>
        <tr>
            <td align="center" width="50%">@Html.Password("Password")</td>
            
        </tr>
        <tr>
            <td align="center" width="50%"><br><input type="submit" value="Отправить" /></td>
        </tr>
         <tr><td align="center" width="50%"><br><br>@Html.ValidationMessage("Login")</td></tr>
         <tr><td align="center" width="50%">@Html.ValidationMessage("Password")</td></tr>
    </table>

}

